@model BookCreateEditViewModel

@{
    ViewData["Title"] = getPageName();
}

<h2>@ViewData["Title"]</h2>
<h4>Book</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                @*type=text to disable default datepicker*@
                <input asp-for="ReleaseDate" type="text" class="form-control datepicker" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control" asp-items="@Model.Authors"></select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="BookId" />
                <input type="hidden" asp-for="PicturePath" />
                <input type="hidden" asp-for="AveragedRating" />
                <input asp-action="CreateEdit" type="submit" value="@ViewData["Title"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@functions{
    public string getPageName()
    {
        if (Model.BookId == 0)
        {
            return "Create";
        }
        else
        {
            return "Edit";
        }
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
