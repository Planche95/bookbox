@model IEnumerable<BookRatingViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>What are you looking for?</h2>
<div class="row">
    <div class="col-md-12">
        <form method="get">
            <div class="form-group input-group">
                <input class="form-control" name="filter" value="@Context.Request.Query["filter"]"/>
                <span class="input-group-btn">
                    <input class="btn btn-default" type="submit" value="Search" />
                </span>
            </div>
        </form>
    </div>
</div>

<div class="row">

    @foreach (BookRatingViewModel book in Model)
    {
        @Html.Partial("_BookBlockPartial", book)
    }

</div>
