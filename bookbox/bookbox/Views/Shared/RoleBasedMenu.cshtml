@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin"))
    {
        <li class="dropdown">
            <a asp-controller="" asp-action="" class="dropdown-toggle" 
               data-toggle="dropdown">Add new <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <a asp-controller="Author" asp-action="Create">Add Author</a>
                </li>
                <li>
                    <a asp-controller="Book" asp-action="Create">Add Book</a>
                </li>
            </ul>
        </li>

    }
    if (User.IsInRole("User"))
    {
        <li class="dropdown">
            <a asp-controller="" asp-action="" class="dropdown-toggle"
               data-toggle="dropdown">@User.Identity.Name <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <a asp-controller="" asp-action="">Account</a>
                </li>
                <li>
                    <a asp-controller="" asp-action="">Revieved books</a>
                </li>
            </ul>
        </li>
    }
}